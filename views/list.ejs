<%- include("partials/header") -%>
  
    <div class="box" id="heading">
  
        <h1 class="listhd"><%=ListTitle%></h1>
    </div>
 <div class="box ">

 
    <% newListItem.forEach(function(item){ %>
        <form  action="/delete" method="post"> 
        <div class="item">
            <input type="checkbox"  name="checked"  value="<%=item._id%>" onchange="this.form.submit()">
            <p><%=item.name%></p>
        </div>
        <input type="hidden" name="listName" value="<%=ListTitle%>"></input>
    </form>
     <% }) %>
            <form class="item" action="/list" method="post">
            <input type="text" name="new_item" placeholder="New item"  >
            <button class="listbtn" type="submit" name="list" value="<%=ListTitle%>" >+</button>
    
        </form>
 </div>
